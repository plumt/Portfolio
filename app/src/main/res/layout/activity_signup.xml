<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F1F1"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/signup_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="50dp"
        android:src="@drawable/addphoto" />

    <EditText
        android:id="@+id/signup_editemail"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/edittext_login"
        android:hint="이메일"
        android:inputType="textEmailAddress"
        android:maxLength="30" />

    <TextView
        android:id="@+id/text_warning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:text="이메일 형식으로 입력해 주세요"
        android:textColor="#FF0000"
        android:textSize="10dp"
        android:visibility="invisible" />

    <EditText
        android:id="@+id/signup_editpassword1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/edittext_login"
        android:hint="패스워드"
        android:inputType="textPassword"
        android:maxEms="20" />

    <TextView
        android:id="@+id/password_length_warning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:text="6자리 이상 입력해 주세요"
        android:textColor="#FF0000"
        android:textSize="10dp"
        android:visibility="invisible" />

    <EditText
        android:id="@+id/signup_editpassword2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/edittext_login"
        android:hint="패스워드 확인"
        android:inputType="textPassword"
        android:maxLength="20" />

    <TextView
        android:id="@+id/password_equal_warning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:text="동일한 비밀번호를 입력해 주세요"
        android:textColor="#FF0000"
        android:textSize="10dp"
        android:visibility="invisible" />

    <EditText
        android:id="@+id/signup_editname"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/edittext_login"
        android:hint="이름"
        android:maxLength="10" />

    <TextView
        android:id="@+id/name_warning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:text="1자리 이상 입력해 주세요"
        android:textColor="#FF0000"
        android:textSize="10dp"
        android:visibility="invisible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:weightSum="1">

        <EditText
            android:id="@+id/signup_edittag"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/edittext_login"
            android:hint="태그 (#)"
            android:inputType="number"
            android:maxLength="6" />

        <Button
            android:id="@+id/signup_tagcheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0"
            android:background="@drawable/button_login"
            android:enabled="false"
            android:foreground="?selectableItemBackground"
            android:text="중복체크" />
    </LinearLayout>

    <TextView
        android:id="@+id/tag_warning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:text="6자리를 입력해 주세요"
        android:textColor="#FF0000"
        android:textSize="10dp"
        android:visibility="invisible" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radio_man"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:checked="true"
            android:text="남" />

        <RadioButton
            android:id="@+id/radio_woman"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="여" />

    </RadioGroup>


    <Button
        android:id="@+id/signup_signupbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/button_login"
        android:foreground="?selectableItemBackground"
        android:text="회원가입" />


</LinearLayout>
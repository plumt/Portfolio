<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/messageItem_liner_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/messageItem_liner_destination"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/messageItem_image_profile"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center" />

        <TextView
            android:gravity="center"
            android:maxLength="10"
            android:maxLines="1"
            android:textSize="10dp"
            android:id="@+id/messageItem_text_name"
            android:layout_width="50dp"
            android:layout_height="14.5dp"
            android:layout_gravity="center" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:maxLines="2"
            android:id="@+id/messageItem_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/messageItem_textview_count_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:text="1"
                android:textColor="@android:color/holo_orange_light"
                android:textSize="9dp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/messageitem_text_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/darker_gray"
                android:textSize="9dp" />

            <TextView
                android:id="@+id/messageItem_textview_count_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:text="1"
                android:textColor="@android:color/holo_orange_light"
                android:textSize="9dp"
                android:visibility="invisible" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
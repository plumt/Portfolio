<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F1F1"
    tools:context=".alert.DeleteMemoActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_alignParentTop="true"
        android:background="#86B2D8"
        android:gravity="center"
        android:text="메모 삭제"
        android:textColor="#ffffff"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="메모를 삭제하시겠습니까?"
        android:textSize="20dp" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/txt"
        android:layout_marginTop="40dp"
        android:background="#E6BDBDBD" />

    <LinearLayout
        android:id="@+id/liner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="1">

        <Button
            android:id="@+id/cancle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:background="#00FFFFFF"
            android:foreground="?selectableItemBackground"
            android:gravity="center"
            android:padding="16dp"
            android:text="취소"
            android:textColor="#86B2D8"
            android:textSize="15dp"
            android:textStyle="bold" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="#E6BDBDBD" />

        <Button
            android:id="@+id/delete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:background="#00FFFFFF"
            android:foreground="?selectableItemBackground"
            android:gravity="center"
            android:padding="16dp"
            android:text="확인"
            android:textColor="#86B2D8"
            android:textSize="15dp"
            android:textStyle="bold" />
    </LinearLayout>

    <EditText
        android:id="@+id/input_password"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/title"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="35dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/edittext_login"
        android:gravity="center"
        android:hint="패스워드를 입력해 주세요 ( 0 / 15 )"
        android:maxLength="20"
        android:textSize="15dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/password_warning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/input_password"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:text="패스워드는 한 글자 이상 입력해 주세요"
        android:textColor="#FF0000"
        android:textSize="10dp"
        android:visibility="gone" />

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/input_password"
        android:layout_marginTop="30dp"
        android:background="#E6BDBDBD"
        android:visibility="gone" />

    <Button
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view2"
        android:background="#00FFFFFF"
        android:foreground="?selectableItemBackground"
        android:gravity="center"
        android:padding="16dp"
        android:text="확인"
        android:textColor="#86B2D8"
        android:textSize="15dp"
        android:textStyle="bold"
        android:visibility="gone" />

</RelativeLayout>
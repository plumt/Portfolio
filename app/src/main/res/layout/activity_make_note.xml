<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sendrelative"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F1F1"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_alignParentTop="true"
        android:background="#86B2D8"
        android:gravity="center"
        android:text="폴더 생성"
        android:textColor="#ffffff"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/notename"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/title"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="35dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/edittext_login"
        android:gravity="center"
        android:hint="폴더 이름을 입력해 주세요 ( 0 / 20 )"
        android:maxLength="20"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/name_warning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/notename"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="15dp"
        android:text="폴더 이름은 한 글자 이상 입력해 주세요"
        android:textColor="#FF0000"
        android:textSize="10dp"
        android:visibility="invisible" />

    <CheckBox
        android:id="@+id/checkbox"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@+id/name_warning"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="15dp" />

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/name_warning"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="30dp"
        android:layout_toRightOf="@+id/checkbox"
        android:background="@drawable/edittext_login"
        android:enabled="false"
        android:gravity="center"
        android:hint="패스워드를 입력해 주세요 ( 0 / 15 )"
        android:inputType="textPassword"
        android:maxLength="15"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/password_warning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/password"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="30dp"
        android:layout_toRightOf="@+id/checkbox"
        android:text="패스워드는 한 글자 이상 입력해 주세요"
        android:textColor="#FF0000"
        android:textSize="10dp"
        android:visibility="invisible" />

    <FrameLayout
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/password"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="visible">

            <Button
                android:id="@+id/red"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="10dp"
                android:background="#FF9696"
                android:foreground="?selectableItemBackground"
                android:visibility="visible" />

            <Button
                android:id="@+id/orange"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="10dp"
                android:background="#FFD198"
                android:foreground="?selectableItemBackground" />

            <Button
                android:id="@+id/yellow"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="10dp"
                android:background="#F3F389"
                android:foreground="?selectableItemBackground" />

            <Button
                android:id="@+id/green"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="10dp"
                android:background="#D4FF98"
                android:foreground="?selectableItemBackground" />

            <Button
                android:id="@+id/sky"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="10dp"
                android:background="#B4E1F3"
                android:foreground="?selectableItemBackground" />

            <Button
                android:id="@+id/blue"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="10dp"
                android:background="#8ABFFB"
                android:foreground="?selectableItemBackground" />

            <Button
                android:id="@+id/purple"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="10dp"
                android:background="#D6B4F6"
                android:foreground="?selectableItemBackground" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#00FFFFFF"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="visible">

            <ImageView
                android:id="@+id/arrow_red"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="10dp"
                android:background="#00FFFFFF"
                android:src="@drawable/arrow"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/arrow_orange"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="10dp"
                android:background="#00FFFFFF"
                android:src="@drawable/arrow"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/arrow_yellow"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="10dp"
                android:background="#00FFFFFF"
                android:src="@drawable/arrow"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/arrow_green"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="10dp"
                android:background="#00FFFFFF"
                android:src="@drawable/arrow"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/arrow_sky"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="10dp"
                android:background="#00FFFFFF"
                android:src="@drawable/arrow"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/arrow_blue"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="10dp"
                android:background="#00FFFFFF"
                android:src="@drawable/arrow"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/arrow_purple"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="10dp"
                android:background="#00FFFFFF"
                android:src="@drawable/arrow"
                android:visibility="invisible" />
        </LinearLayout>
    </FrameLayout>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/frame"
        android:layout_marginTop="30dp"
        android:background="#E6BDBDBD" />

    <LinearLayout
        android:id="@+id/liner2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="1">

        <Button
            android:id="@+id/cancle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:background="#00FFFFFF"
            android:foreground="?selectableItemBackground"
            android:gravity="center"
            android:padding="16dp"
            android:text="취소"
            android:textColor="#86B2D8"
            android:textSize="15dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/delete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:background="#00FFFFFF"
            android:foreground="?selectableItemBackground"
            android:gravity="center"
            android:padding="16dp"
            android:text="삭제"
            android:textColor="#86B2D8"
            android:textSize="15dp"
            android:textStyle="bold"
            android:visibility="gone" />

        <View
            android:id="@+id/view2"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="#E6BDBDBD" />

        <Button
            android:id="@+id/result"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:background="#00FFFFFF"
            android:foreground="?selectableItemBackground"
            android:gravity="center"
            android:padding="16dp"
            android:text="확인"
            android:textColor="#86B2D8"
            android:textSize="15dp"
            android:textStyle="bold" />
    </LinearLayout>

    <EditText
        android:id="@+id/input_password"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/title"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="35dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/edittext_login"
        android:gravity="center"
        android:hint="패스워드를 입력해 주세요 ( 0 / 15 )"
        android:maxLength="20"
        android:textSize="15dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/password_warning2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/input_password"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:text="패스워드는 한 글자 이상 입력해 주세요"
        android:textColor="#FF0000"
        android:textSize="10dp"
        android:visibility="gone" />

    <View
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/input_password"
        android:layout_marginTop="30dp"
        android:background="#E6BDBDBD"
        android:visibility="gone" />

    <Button
        android:id="@+id/result2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view3"
        android:background="#00FFFFFF"
        android:foreground="?selectableItemBackground"
        android:gravity="center"
        android:padding="16dp"
        android:text="확인"
        android:textColor="#86B2D8"
        android:textSize="15dp"
        android:textStyle="bold"
        android:visibility="gone" />
</RelativeLayout>
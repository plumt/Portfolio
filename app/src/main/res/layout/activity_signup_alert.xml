<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F1F1"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_alignParentTop="true"
        android:background="#86B2D8"
        android:gravity="center"
        android:text="회원가입"
        android:textColor="#ffffff"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/signup_editemail"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/edittext_login"
        android:hint="이메일을 입력해 주세요 ( 0 / 30 )"
        android:inputType="textEmailAddress"
        android:maxLength="30" />

    <TextView
        android:id="@+id/text_warning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:text="이메일 형식으로 입력해 주세요"
        android:textColor="#FF0000"
        android:textSize="10dp"
        android:visibility="invisible" />

    <EditText
        android:id="@+id/signup_editname"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/edittext_login"
        android:hint="이름을 입력해 주세요 ( 0 / 10 )"
        android:maxLength="10" />

    <TextView
        android:id="@+id/name_warning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:text="이름은 한 글자 이상 입력해 주세요"
        android:textColor="#FF0000"
        android:textSize="10dp"
        android:visibility="invisible" />

    <EditText
        android:id="@+id/signup_editpassword1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/edittext_login"
        android:hint="패스워드를 입력해 주세요 ( 0 / 20 )"
        android:inputType="textPassword"
        android:maxEms="20" />

    <TextView
        android:id="@+id/password_length_warning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:text="패스워드는 여섯 글자 이상 입력해 주세요"
        android:textColor="#FF0000"
        android:textSize="10dp"
        android:visibility="invisible" />

    <EditText
        android:id="@+id/signup_editpassword2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/edittext_login"
        android:hint="패스워드를 다시 입력해 주세요( 0 / 20 )"
        android:inputType="textPassword"
        android:maxLength="20" />

    <TextView
        android:id="@+id/password_equal_warning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:text="패스워드가 동일하지 않습니다"
        android:textColor="#FF0000"
        android:textSize="10dp"
        android:visibility="invisible" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_above="@id/liner"
        android:layout_marginTop="30dp"
        android:background="#E6BDBDBD" />

    <LinearLayout
        android:id="@+id/liner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="1">

        <Button
            android:id="@+id/cancle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:background="#00FFFFFF"
            android:foreground="?selectableItemBackground"
            android:gravity="center"
            android:padding="16dp"
            android:text="취소"
            android:textColor="#86B2D8"
            android:textSize="15dp"
            android:textStyle="bold" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="#E6BDBDBD" />

        <Button
            android:id="@+id/signup_signupbutton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:background="#00FFFFFF"
            android:foreground="?selectableItemBackground"
            android:gravity="center"
            android:padding="16dp"
            android:text="가입"
            android:textColor="#86B2D8"
            android:textSize="15dp"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>
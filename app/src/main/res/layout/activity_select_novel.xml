<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F1F1"
    tools:context=".Book.SelectNovelActivity">

    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="3dp"
        android:background="@drawable/round_layout">

        <ImageView
            android:id="@+id/image"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:src="@drawable/books1" />

        <ImageView
            android:id="@+id/profile"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/image"
            android:src="@drawable/profile" />

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@id/profile"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:textSize="13dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/like_image"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@id/title"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/image"
            android:background="@drawable/heart" />

        <TextView
            android:id="@+id/like_txt"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_alignTop="@id/like_image"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@id/like_image"
            android:gravity="left|center_vertical"
            android:singleLine="true"
            android:text="0"
            android:textSize="14dp" />


        <ImageView
            android:id="@+id/view_image"
            android:layout_width="30dp"
            android:layout_height="26dp"
            android:layout_below="@id/like_image"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/image"
            android:src="@drawable/eyes" />

        <TextView
            android:id="@+id/view_txt"
            android:layout_width="match_parent"
            android:layout_height="26dp"
            android:layout_alignTop="@id/view_image"
            android:layout_gravity="center"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@id/view_image"
            android:gravity="left|center_vertical"
            android:singleLine="true"
            android:text="0"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/weektxt"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_below="@id/view_image"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/image"
            android:text="연재 주기 : "
            android:textSize="13dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/mon"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_below="@id/view_image"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@id/weektxt"
            android:background="@drawable/text_round1"
            android:text="월"
            android:textColor="@color/transparent3"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/tue"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_below="@id/view_image"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@id/mon"
            android:background="@drawable/text_round1"
            android:text="화"
            android:textColor="@color/transparent3"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/wed"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_below="@id/view_image"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@id/tue"
            android:background="@drawable/text_round1"
            android:text="수"
            android:textColor="@color/transparent3"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/thu"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_below="@id/view_image"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@id/wed"
            android:background="@drawable/text_round1"
            android:text="목"
            android:textColor="@color/transparent3"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/fri"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_below="@id/view_image"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@id/thu"
            android:background="@drawable/text_round1"
            android:text="금"
            android:textColor="@color/transparent3"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/sat"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_below="@id/view_image"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@id/fri"
            android:background="@drawable/text_round1"
            android:text="토"
            android:textColor="@color/transparent3"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/sun"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_below="@id/view_image"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@id/sat"
            android:background="@drawable/text_round1"
            android:text="일"
            android:textColor="@color/transparent3"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/random"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_below="@id/view_image"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@id/sun"
            android:background="@drawable/text_round1"
            android:text="자유"
            android:textColor="@color/transparent3"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/image"
            android:layout_margin="10dp"
            android:maxLength="100"
            android:maxLines="6"
            android:scrollbarSize="1dp"
            android:scrollbarStyle="outsideInset"
            android:scrollbars="vertical"
            android:textSize="13dp" />
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/adView"
        android:layout_below="@id/relative" />

    <com.google.android.gms.ads.AdView xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="3dp"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-7669498576619816/6768798224">
        <!--        ca-app-pub-3940256099942544/6300978111   테스트-->
        <!--        ca-app-pub-7669498576619816/6768798224      진짜-->
    </com.google.android.gms.ads.AdView>

</RelativeLayout>
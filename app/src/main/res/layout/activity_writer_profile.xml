<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F1F1"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:background="#86B2D8"
        android:gravity="center"
        android:text="작가 프로필"
        android:textColor="#ffffff"
        android:textSize="18dp" />

    <ImageView
        android:background="#86B2D8"
        android:layout_marginTop="13dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"
        android:id="@+id/image"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/more_book" />


    <RelativeLayout
        android:id="@+id/relative1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:visibility="visible">

        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="30dp" />

        <TextView
            android:id="@+id/profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_image"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:maxLines="1"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/profile_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/profile_name"
            android:textSize="12dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:maxLines="1" />

        <LinearLayout
            android:id="@+id/linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/profile_comment"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/like_image"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/heart" />

            <TextView
                android:id="@+id/like_txt"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:text="0개"
                android:textSize="12dp" />


            <ImageView
                android:id="@+id/fan_image"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/people" />

            <TextView
                android:id="@+id/fan_txt"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:text="0명"
                android:textSize="12dp" />

            <ImageView
                android:id="@+id/view_image"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/eyes" />

            <TextView
                android:id="@+id/view_txt"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:text="0회"
                android:textSize="12dp" />
        </LinearLayout>

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@id/linear"
            android:layout_marginTop="25dp"
            android:background="#E6BDBDBD" />

        <LinearLayout
            android:id="@+id/linear2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/view"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone"
            android:weightSum="1">

            <ImageButton
                android:id="@+id/mail_btn"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_weight="0.5"
                android:background="#00FFFFFF"
                android:foreground="?selectableItemBackground"
                android:gravity="center"
                android:padding="15dp"
                android:scaleType="fitCenter"
                android:src="@drawable/send_massage"
                android:textColor="#86B2D8"
                android:textSize="15dp"
                android:textStyle="bold" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="#E6BDBDBD" />

            <ImageButton
                android:id="@+id/add_btn"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_weight="0.5"
                android:background="#00FFFFFF"
                android:clickable="false"
                android:foreground="?selectableItemBackground"
                android:gravity="center"
                android:padding="12dp"
                android:scaleType="fitCenter"
                android:src="@drawable/addfan"
                android:textColor="#86B2D8"
                android:textSize="15dp"
                android:textStyle="bold"
                android:visibility="visible" />

            <ImageButton
                android:id="@+id/minus_btn"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_weight="0.5"
                android:background="#00FFFFFF"
                android:clickable="false"
                android:foreground="?selectableItemBackground"
                android:gravity="center"
                android:padding="12dp"
                android:scaleType="fitCenter"
                android:src="@drawable/nofan"
                android:textColor="#86B2D8"
                android:textSize="15dp"
                android:textStyle="bold"
                android:visibility="gone" />
        </LinearLayout>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative2"
        android:layout_below="@id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <EditText
            android:id="@+id/mail_title"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/edittext_login"
            android:gravity="center"
            android:hint="제목을 입력해 주세요"
            android:maxLength="20"
            android:singleLine="true" />

        <TextView
            android:id="@+id/title_warning"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/mail_title"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:text="제목은 한 글자 이상 입력해주세요"
            android:textColor="#FF0000"
            android:textSize="10dp"
            android:visibility="invisible" />


        <EditText
            android:id="@+id/mail_comment"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_below="@id/title_warning"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/edittext_login"
            android:gravity="center"
            android:hint="내용을 입력해 주세요"
            android:maxLength="100"
            android:maxLines="3" />

        <TextView
            android:id="@+id/mail_warning"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/mail_comment"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:text="내용은 한 글자 이상 입력해주세요"
            android:textColor="#FF0000"
            android:textSize="10dp"
            android:visibility="invisible" />

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@id/mail_warning"
            android:layout_marginTop="25dp"
            android:background="#E6BDBDBD" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/view2"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="1">

            <Button
                android:id="@+id/cancle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:background="#00FFFFFF"
                android:foreground="?selectableItemBackground"
                android:gravity="center"
                android:padding="16dp"
                android:text="취소"
                android:textColor="#86B2D8"
                android:textSize="15dp"
                android:textStyle="bold" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="#E6BDBDBD" />

            <Button
                android:id="@+id/result"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:background="#00FFFFFF"
                android:foreground="?selectableItemBackground"
                android:gravity="center"
                android:padding="16dp"
                android:text="확인"
                android:textColor="#86B2D8"
                android:textSize="15dp"
                android:textStyle="bold" />
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>